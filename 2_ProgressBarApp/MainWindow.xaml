<Window x:Class="_2_ProgressBarApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2_ProgressBarApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="681">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <ProgressBar x:Name="progress" Height="20" Margin="20" 
                     Grid.Row="0" Minimum="0" Maximum="100" 
                     Value="10"></ProgressBar>
        
        <Button Margin="20" Grid.Row="1" Click="Start_Button_Click" 
                FontWeight="Bold" FontSize="20">Start</Button>
    </Grid>
</Window>
